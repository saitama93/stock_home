{% extends "base.html.twig" %}

{% block title %}
    Sites
{% endblock %}

{% block body %}
    <div class="container-fluid">

        <nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item active" aria-current="page">
					<a href="#">Gestion</a>
				</li>
				<li class="breadcrumb-item active" aria-current="page">Sites</li>
			</ol>
		</nav>

        <h1 class="h1 my-3">Gestions des sites</h1>

        <a href="#" class="btn btn-success my-5">
			<i class="fas fa-plus-circle"></i>
		</a>

        <table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Libell√©</th>
					<th class="text-center">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for location in paginator.data %}

					<tr>
						<td>{{ location.id }}</td>
						<td>{{ location.wording }}</td>
                    	<td class="text-center">
                            <a title="Modifier les informations" href="#" class="btn btn-primary mr-2">
								<i class="fas fa-edit"></i>
							</a>
                            <a href="{{ path('AdminLocation.delete', {'id' : location.id}) }}" class="btn btn-danger ml-2" title="Supprimer le compte">
									<i class="fas fa-trash"></i>
							</a>
                        </td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{{ paginator.display }}
    </div>
    
{% endblock %}