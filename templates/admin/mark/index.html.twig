{% extends "base.html.twig" %}

{% block title %}
    Marques
{% endblock %}

{% block body %}
    <div class="container-fluid">

       {% include "admin/partials/miniHeader.html.twig"  with { Title  : 'Marques', Link : path('AdminDashboard.index') } %}

        <h1 class="h1 my-3">Gestion des marques</h1>

        <a href="{{ path('AdminMark.add') }}" class="btn btn-success my-5">
			<i class="fas fa-plus-circle"></i>
		</a>

        <table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Libellé</th>
					<th class="text-center">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for mark in paginator.data %}

					<tr>
						<td>{{ mark.id }}</td>
						<td>{{ mark.wording }}</td>
                    	<td class="text-center">
                            <a title="Modifier les informations" href="{{ path('AdminMark.edit', {'id' : mark.id}) }}" class="btn btn-primary mr-2">
								<i class="fas fa-edit"></i>
							</a>
                            <a href="{{ path('AdminMark.delete', {'id' : mark.id}) }}" class="btn btn-danger ml-2" title="Supprimer le compte">
									<i class="fas fa-trash"></i>
							</a>
                        </td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{{ paginator.display }}
    </div>
    
{% endblock %}