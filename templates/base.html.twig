		<body>
			{% block header %}
				{% if app.user %}
					{% if 'ROLE_ADMIN' in app.user.roles %}

						{% include "admin/partials/header.html.twig" %}
					{% endif %}

					{% if 'ROLE_ADMIN'not in app.user.roles and 'ROLE_PUBLIC' not in app.user.roles %}

						{% include "partials/header.html.twig" %}
					{% endif %}
